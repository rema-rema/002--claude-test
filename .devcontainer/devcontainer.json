{
  "name": "Discord Claude Code Interface",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "npm install && echo 'npm start &' >> ~/.bashrc",
  "postStartCommand": "nohup npm start > discord-bot.log 2>&1 & echo $! > bot.pid",
  "forwardPorts": [],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "remoteUser": "node"
}